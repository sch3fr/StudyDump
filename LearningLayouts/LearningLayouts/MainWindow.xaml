<Window x:Class="LearningLayouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearningLayouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0">Button 00</Button>
        <Button Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">Button 11</Button>
        <Button Width="100" Grid.Column="2" Grid.Row="2">Button 22</Button>
        <Button Grid.Column="0" Grid.Row="1">Button 10</Button>
        <Button Grid.Column="0" Grid.Row="2">Button 20</Button>
        <Button Grid.Column="1" Grid.Row="0">Button 01</Button>
        
        <Button Grid.Column="2" Grid.Row="0">Button 02</Button>
        <Button Grid.Column="2" Grid.Row="1">Button 12</Button>
    </Grid>
</Window>
